@import './vars.styl'

.TopImage
  height 300px
  background-image url('/static/images/top.jpg')
  background-size cover
  background-position-y 440px
  background-attachment fixed
  text-align center
  
  p
    line-height 300px
    color white
    font-size 30px
    margin 0
    font-family Mincho

.MainContents
  max-width 700px
  margin 15px auto 0
  display flex

  .WaitTimesLink
    border-radius 3px
    max-width 90%
    margin 10px auto
    transition 0.2s
    margin 0 20px
    padding 10px
    background-color #f9f9f9

    img
      margin-bottom 15px
      width 350px
      height 180px
      object-fit cover

    a
      color TextColor
      font-size 25px
      text-decoration none

      &:hover
        text-decoration underline

      p
        font-weight 700
        margin 0
        padding 10px
